/**index.wxss**/
.container {
 font-family: Verdana, Geneva, Tahoma, sans-serif;
 margin: 5px 10px 5px 10px;
 width: 95%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
  font-size: 14px;
}

.usermotto {
  margin-top: 20px;
}
.section {
   float: left;
   margin-top: 20px;
   border: 1px solid #aaa;
   border-radius: 6px;
   width: 99%;
}
.section_btn {
   float: left;
   margin-top: 20px;
   border-radius: 6px;
   width: 99%;
}
.section input {
  padding: 5px;
}
.input-placeholder {
  font-size: 10px;
}
.section__title {
  font-size: 14px;
  color: cornflowerblue;
}
.btnSubmit {
  min-width: 80%;
  background-color: #33ac3f;
  color: #fff;
}
.deleteUser{
  color: cornflowerblue;
  font-size: 14px;
  float: center;
  padding-top: 2rem;
  text-align: center;
}
